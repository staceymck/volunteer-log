<%= form_for role do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.label :age_requirement %>
  <%= f.select :age_requirement, [["Under 18 with chaperone", "chaperone_if_under_eighteen"], ["Over 18", "over_eighteen"],["Over 21", "over_twenty_one"]] %><br>
  <%= f.label :frequency %>
  <%= f.select :frequency, [["Ongoing", "ongoing"], ["One time", "one_time"]] %><br>
  <%= f.label :status %>
  <%= f.select :status, [["Recruiting", "recruiting"], ["No current opportunities", "no_current_opportunities"]] %><br>
  <%= f.label :background_check_required, "Background check required?" %>
  <%= f.check_box :background_check_required %><br>
  <%= f.submit "Save" %>
<% end %>