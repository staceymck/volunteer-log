<div class="visitor-container">
  <div class="left-item">
    <h1>VolunteerLog</h1>
      <p>Track your volunteers, opportunities,and volunteer engagement records in one place for easier management and reporting.</p>
      <p><%= button_to 'Sign in with GitHub', '/auth/github' %></p>
  </div>

  <div class="right-item">
    <h2>Sign Up <span class="de-emphasize"> or <%= link_to 'login', login_path %></span></h2>
      <%= form_for @user do |f| %>
        <%= f.label :username %><br>
        <%= f.text_field :username %><br>
        <%= f.label :email %><br>
        <%= f.email_field :email %><br>
        <%= f.label :password %><br>
        <%= f.password_field :password %><br>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %><br>
        <%= f.submit "Sign up" %>
      <% end %>
      <%= render partial: '/shared/flash_alerts' %>
  </div>
</div>