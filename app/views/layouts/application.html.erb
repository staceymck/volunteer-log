<!DOCTYPE html>
<html>
  <head>
    <title>VolunteerLog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
     <% if current_user %>
       <%= link_to 'VolunteerLog', '/' %>
       <%= link_to 'Logout', logout_path, method: 'delete' %> | 
     <% end %>
    </nav>
    <% if flash[:alert] %>
      <div class="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
