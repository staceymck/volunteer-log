<%= render partial: '/shared/validation_errors', locals: {object: volunteer}%>

<%= form_for volunteer do |f| %>
  <%= f.label :first_name, class: "required" %><br>
  <%= f.text_field :first_name, required: true %><br>
  <%= f.label :last_name, class: "required" %><br>
  <%= f.text_field :last_name, required: true %><br>
  <%= f.label :phone %><br>
  <%= f.telephone_field :phone, placeholder: '(xxx) xxx-xxxx' %><br>
  <%= f.label :email %><br>
  <%= f.email_field :email %><br>
  <%= f.label :occupation %><br>
  <%= f.text_field :occupation %><br>
  <%= f.label :employer %><br>
  <%= f.text_field :employer %><br>
  <%= f.label :birthday %><br>
  <%= f.date_field :birthday %><br>
  <%= f.label :age_group, class: "required" %><br>
  <%= f.select :age_group, [["Under 18", "under_eighteen"], ["18-21", "over_eighteen"], ["Over 21", "over_twenty_one"]], required: true %><br>
  <%= f.label :background_check_status, class: "required" %><br>
  <%= f.select :background_check_status, [["Incomplete", "incomplete"], ["Approved", "approved"], ["Flagged", "flagged"]], required: true %><br>
  <%= f.label :photo, "Photo link" %><br>
  <%= f.url_field :photo %><br>
  <%= f.label :interests %><br>
  <%= f.text_area :interests %><br>
  <%= f.submit "Save" %>
<% end %>